@{
}
@model ItalikaProjectMVC.Models.Product
<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card">
                <div class="card-header">
                    Add Post
                </div>
                <div class="card-body">
                    @using (Html.BeginForm("CreatePost", "Products", FormMethod.Post))
                    {
                        <div class="form-group">
                            <label>Sku</label>
                            @Html.TextBoxFor(m => m.Sku, new { @class = "form-control", @placeholder = "Sku" })
                        </div>
                        <div class="form-group">
                            <label>Fert</label>
                            @Html.TextBoxFor(m => m.Fert, new { @class = "form-control", @placeholder = "Fert" })
                        </div>
                        <div class="form-group">
                            <label>Model</label>
                            @Html.TextBoxFor(m => m.IdModel, new { @class = "form-control", @placeholder = "Fert" })
                        </div>
                        <div class="form-group">
                            <label>Serie</label>
                            @Html.TextBoxFor(m => m.Serie, new { @class = "form-control", @placeholder = "Fert" })
                        </div>
                        <div class="form-group">
                            <input type="submit" name="submit" value="Add Post" class="btn btn-success" />
                            @if (ViewBag.message != "")
                            {
                                <span class="badge badge-danger">@ViewBag.message</span>
                            }
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>